<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".ui.profile.ProfileFragment">

    <ImageView
        android:id="@+id/ProfilePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>
    <TextView
        android:id="@+id/TvProfileName"
        android:layout_below="@+id/ProfilePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account / Login"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/TvProfileDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TvProfileName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Create profile, follow other profiles, make your own \n video and more"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <Button
        android:id="@+id/withFacebook"
        android:layout_below="@id/TvProfileDesc"
        android:layout_width="330dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Continue with facebook"
        android:textAllCaps="false"
        android:textColor="@color/black"
        />
    <Button
        android:id="@+id/withGoogle"
        android:layout_below="@+id/withFacebook"
        android:layout_width="330dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Continue with Google"
        android:textAllCaps="false"
        android:textColor="@color/black"
        />
    <Button
        android:id="@+id/withPhone"
        android:layout_below="@id/withGoogle"
        android:layout_width="330dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Continue with Phone Number"
        android:textAllCaps="false"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By signing up you agree tpo our Terms of uses, \n Privacy Policy and Community Guidelines"
        android:textColor="#C4C4C4"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/backProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_marginTop="12dp"
            android:layout_marginStart="15dp"/>





</RelativeLayout>
